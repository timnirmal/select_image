{
  "name": "photo-selector-electron",
  "version": "0.1.0",
  "description": "Photo selector desktop app (Electron)",
  "main": "src/main.js",
  "scripts": {
    "dev": "electronmon .",
    "build": "electron-builder --mac",
    "pack": "electron-builder --mac -p never",
    "prebuild:win": "node scripts/ensure-exiftool-pl.js",
    "build:win": "npm run prebuild:win && electron-builder --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timnirmal/select_image.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/timnirmal/select_image/issues"
  },
  "homepage": "https://github.com/timnirmal/select_image#readme",
  "electronmon": {
    "patterns": [
      "!dist/**",
      "!node_modules/**",
      "!.git/**"
    ]
  },
  "dependencies": {
    "exiftool-vendored": "^30.5.0",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^29",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3"
  },
  "build": {
    "appId": "com.photo.selector",
    "asarUnpack": [
      "node_modules/exiftool-vendored.exe/**"
    ],
    "mac": {
      "category": "public.app-category.photography",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true
    },
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "files": [
      "src/**",
      "node_modules/**",
      "package.json"
    ]
  }
}
